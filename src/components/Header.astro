---
import { themeConfig } from "@/config";
import { isHomePage } from "@/utils/pages";

const { title, subtitle } = themeConfig.site;

const TitleTag = isHomePage(Astro.url.pathname) ? "h1" : "h2";
const SubtitleTag = "div";
---

<header class:list={["cjk:tracking-wide", "mb-10.8"]}>
  <TitleTag
    class:list={[
      "text-7xl",
      "font-semibold font-title",
      "mb-2.8 text-5.375 c-secondary lg:(mb-1.8 mt-0 text-9 c-primary)",
    ]}
  >
    <div
      class="box-content inline-block pr-1"
      transition:name={`site-title-${themeConfig.global.lang}`}
      data-disable-theme-transition
    >
      <a id="site-title-link" href="/" style="text-decoration-line: none;">
        {title}
      </a>
    </div>
  </TitleTag>
  <br />
  {
    subtitle && (
      <SubtitleTag
        class:list={[
          "text-3.5 c-secondary font-navbar lg:text-4",
          "op-0 lg:op-100",
        ]}
        aria-hidden="true"
      >
        {subtitle}
      </SubtitleTag>
    )
  }
  <br />
</header>
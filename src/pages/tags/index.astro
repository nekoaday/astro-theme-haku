---
import Layout from "@/layouts/Layout.astro";
import { getArticlesGroupByTags } from "@/utils/content";
import { getTagPath } from "@/utils/path";

const tagMap = await getArticlesGroupByTags();
const tags = Array.from(tagMap.entries()).sort((a, b) => b[1].length - a[1].length);
---

<Layout articleTitle="标签" articleDescription="文章标签索引">
  <h1>标签</h1>
  {tags.length === 0 ? (
    <p>目前还没有标签。</p>
  ) : (
    <div class="tag-cloud">
      {tags.map(([tag, articles]) => (
        <a href={getTagPath(tag)} class="tag-cloud__item">
          #{tag} <span class="tag-cloud__count">({articles.length})</span>
        </a>
      ))}
    </div>
  )}
</Layout>

<style is:global>
  .tag-cloud {
    display: flex;
    flex-wrap: wrap;
    gap: 0.75rem;
    margin-top: 1.5rem;
  }

  .tag-cloud__item {
    padding: 0.3rem 0.8rem;
    border-radius: 999px;
    border: 1px solid var(--color-border, rgba(0, 0, 0, 0.12));
    text-decoration: none;
  }

  html.dark .tag-cloud__item {
    border-color: rgba(255, 255, 255, 0.2);
  }

  .tag-cloud__count {
    opacity: 0.7;
    font-size: 0.85em;
  }
</style>

---
// src/layout/Layout.astro
import Head from '@/layouts/Head.astro'
import themeConfig from '@/config'
import '../styles/global.css'

interface Props {
  articleTitle?: string
  articleDescription?: string
  articleSlug?: string
  supportedLangs?: string[]
}

const { author } = themeConfig.site
---
<!DOCTYPE HTML>
<html lang="zh-cn">
	<Head />
	<body>
        <!-- Place your Header here. -->
		<header>
            <nav>
                <a href="/">首页</a>
                <a href="/blog">博客</a>
                <a href="/about">关于</a>
            </nav>
        </header>

		<main>
			<!-- <slot /> is a placeholder where the content of the subpage will be inserted. -->
			<slot />
		</main>

        <!-- Place your Footer here. -->
        <footer>
            <p>&copy; {new Date().getFullYear()} {author} - All rights reserved.</p>
        </footer>

	</body>
</html>